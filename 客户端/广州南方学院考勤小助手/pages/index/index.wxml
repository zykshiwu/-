      <view class="weui-flex">
        <view class="weui-flex__item"><view class="placeholder" style="height: 100px;"><image style="width: 100%;height: 100%;" src="/pages/images/qk2.png"></image></view></view>
			  <view class="weui-flex__item"><view class="placeholder" style="height: 100px;"><image style="width: 100%;height: 100%;" src="/pages/images/qk6.png"></image></view></view>
